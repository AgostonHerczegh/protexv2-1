<section class="sign sign-up">
  <form action="/sign-up" method="post" id="form">
    <div class="input-sign">
      <label for="username">Név:</label>
      <input type="text" id="username" name="username">
    </div>
    <div class="input-sign">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email">
    </div>
    <div class="input-sign">
      <label for="password">Jelszó:</label>
      <input type="password" id="password" name="password">
    </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}" class="input-sign">
    <input type="submit" value="Regisztráció" class="btn-submit">
  </form>
  <div class="texts">
    <p>Már van regisztrált fiókod, <a href="/sign-in">Bejelentkezés</a></p>
  </div>
</section>

<script>
  document.getElementById("form").addEventListener("submit", function (event) {
    event.preventDefault()
    validateUsername();

  });
  function isValidUsername(username) {
    const regex = /^[a-zA-Z ]*$/;
    return regex.test(username) && username.replace(/\s/g, '').length > 0;
  }

  function validateUsername() {
    const username = document.getElementById("username").value;
    if (isValidUsername(username)) {
      document.getElementById("form").submit()

    } else {
      alert("Nem megfelelő név formátum!");
    }

  }




</script>