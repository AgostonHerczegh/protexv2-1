<section class="products">
  <aside>
    <form id="filters-form">
      <fieldset>
        <legend>Szűrés</legend>
        <div class="filter">
          <label for="category">Kategória</label>
          <select name="category" id="category">
            <option value="0">Összes</option>
            {{#each categories}}
              <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
          <div class="price">
          <label for="price">Ár</label>
          <input type="range" name="price-slider" id="price-slider" min="0" max="100000" step="1000">
          </div>
          <div class="brand">
            {{!-
          <label for="brand">Gyártók</label>
          <select name="brand" id="brand">
            <option value="0">Összes</option>
          </div>
        </div>
        -}} 
        <button type="submit">Mehet!</button>
      </fieldset>
    </form>
  </aside>
  <main>
    <nav>
      <ul class="filters">
        <li class="filter"><a href="/order/rating">Népszerű termékek</a></li>
        <li class="filter"><a href="/order/low-price">Alacsony-Magas ár</a></li>
        <li class="filter"><a href="/order/price">Magas-Alacsony ár</a></li>
      </ul>
    </nav>
    <div class="products-list">
      {{# each products}}
        <form class="product">
          <div class="labels">
          </div>
          <img src="/img/products/{{this.img_url}}" alt="{{this.name}}" class="product-img">
          <a href="/product-detail/{{this.product_url}}"><p class="name">{{this.name}}</p></a>
          <div class="price">
            <p class="price-value">{{this.price}} Ft</p>
          </div>
          <a href="/add-to-cart/{{this.id}}">
              <div class="white-button">Vásárlás</div>
            </a>
            <br>
        </form>
      {{/each}}
    </div>
  </main>
</section>

